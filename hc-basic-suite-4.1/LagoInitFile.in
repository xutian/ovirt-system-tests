domains:
  __ENGINE__:
    vm-provider: ssh
    vm-type: ovirt-engine
    distro: el7
    service_provider: systemd
    ssh-password: 123456
    nics:
      - net: __LAGO_NET_MANAGEMENT__
        ip: 192.168.200.99
    metadata:
      ovirt-engine-password: 123

  __HOST2__:
    vm-type: ovirt-host
    distro: el7
    memory: 5120
    nics:
      - net: __LAGO_NET_MANAGEMENT__
    disks:
      - template_name: el7.5-base
        type: template
        name: root
        dev: vda
        format: qcow2
      - comment: Used for brick
        name: brick
        size: 100G
        type: empty
        dev: vdb
        format: raw
      - comment: Used for cache
        name: cache
        size: 20G
        type: empty
        dev: vdc
        format: raw
    metadata:
      ovirt-capabilities:
        - snapshot-live-merge
      deploy-scripts:
        - $LAGO_INITFILE_PATH/../common/deploy-scripts/add_local_repo.sh
        - $LAGO_INITFILE_PATH/../common/deploy-scripts/setup_host_el7.sh
        - $LAGO_INITFILE_PATH/hc_setup_host.sh

  __HOST1__:
    vm-type: ovirt-host
    distro: el7
    memory: 5120
    nics:
      - net: __LAGO_NET_MANAGEMENT__
    disks:
      - template_name: el7.5-base
        type: template
        name: root
        dev: vda
        format: qcow2
      - comment: Used for brick
        name: brick
        size: 100G
        type: empty
        dev: vdb
        format: raw
      - comment: Used for cache
        name: cache
        size: 20G
        type: empty
        dev: vdc
        format: raw
    metadata:
      ovirt-capabilities:
        - snapshot-live-merge
      deploy-scripts:
        - $LAGO_INITFILE_PATH/../common/deploy-scripts/add_local_repo.sh
        - $LAGO_INITFILE_PATH/../common/deploy-scripts/setup_host_el7.sh
        - $LAGO_INITFILE_PATH/hc_setup_host.sh

  __HOST0__:
    vm-type: ovirt-host
    distro: el7
    memory: 5120
    nics:
      - net: __LAGO_NET_MANAGEMENT__
    disks:
      - template_name: el7.5-base
        type: template
        name: root
        dev: vda
        format: qcow2
      - comment: Used for brick
        name: brick
        size: 100G
        type: empty
        dev: vdb
        format: raw
      - comment: Used for cache
        name: cache
        size: 20G
        type: empty
        dev: vdc
        format: raw
      - name: tmp
        size: 60G
        type: empty
        dev: vdd
        format: qcow2
    metadata:
      ovirt-capabilities:
        - snapshot-live-merge
      deploy-scripts:
        - $LAGO_INITFILE_PATH/../common/deploy-scripts/add_local_repo.sh
        - $LAGO_INITFILE_PATH/../common/deploy-scripts/setup_host_el7.sh
        - $LAGO_INITFILE_PATH/gdeploy-setup.sh
        - $LAGO_INITFILE_PATH/hc_setup_host.sh
        - $LAGO_INITFILE_PATH/setup_first_host.sh

nets:
  __LAGO_NET_MANAGEMENT__:
    type: nat
    dhcp:
      start: 100
      end: 254
    management: true
    dns_domain_name: lago.local
